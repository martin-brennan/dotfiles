// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
    "postgres-context-server": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "database_url": "postgresql://postgres@localhost:5432/discourse_development"
      }
    }
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "amazon-bedrock",
      "model": "claude-3-7-sonnet"
    },
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true
  },
  "buffer_font_features": {
    "calt": 0
  },
  "icon_theme": "Zed (Default)",
  "vim_mode": true,
  "ui_font_size": 16,
  "edit_predictions": {
    "mode": "eager"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Kanagawa Wave"
  },

  "languages": {
    "Glimmer (JavaScript)": {
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "format_on_save": "on",
      "language_servers": ["eslint", "ember-language-server"]
    },
    "JavaScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "format_on_save": "on"
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph", "!sorbet"],
      "formatter": {
        "external": {
          "command": "stree",
          "arguments": ["format"]
        }
      }
    }
  }
}
