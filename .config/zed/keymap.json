[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "f f": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "S S": "workspace::Save",
      "cmd-g": ["task::Spawn", { "task_name": "echo current file's path" }],
      "space l": ["task::Spawn", { "task_name": "run rspec at line" }],
      "space s": ["task::Spawn", { "task_name": "run rspec for file" }],
      "space b": "tab_switcher::ToggleAll"
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      // "space g h": "git::"
    }
  }
]
